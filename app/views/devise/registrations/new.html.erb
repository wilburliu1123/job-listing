<div class="jumbotron">
<div class="devise-text">


<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= f.error_notification %>


  <h2>注册</h2>
  <div class="form-inputs">
  <%= f.input :email, :label => "电子邮箱", required: true, autofocus: true %>
  <%= f.input :password, :label => "密码", required: true, hint: (" #{@minimum_password_length}位最少字数" if @minimum_password_length) %>
  <%= f.input :password_confirmation, :label => "确认密码", required: true %>
  </div>

<div class="form-actions">
  <%= f.button :submit, "注册" %>
</div>
<% end %>
<br>
已经有账号？  <a href="/users/sign_in">登录</a>
</div>
</div>
