<div class="jumbotron">
  <h3 class="title">
    只有想不到，没有找不到。
  </h3>
</div>
<%= render :partial => "jobs/search_bar" %>


<div class="dropdown clearfix pull-right">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      排序
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li> <%= link_to("按工资下限排序（由高到低）", jobs_path(:order => "by_lower_bound")) %> </li>
      <li> <%= link_to("按工资上限排序（由高到低）", jobs_path(:order => "by_upper_bound")) %> </li>
      <li> <%= link_to("按时间排序（由高到低）", jobs_path) %> </li>
    </ul>
  </li>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>

        <td>职位</td>
        <td>描述</td>
        <td>创建日期</td>
        <td>薪资下限</td>
        <td>薪资上限</td>
      </tr>
    </thead>
        <tbody>
          <% @jobs.each do |job| %>
          <tr>

            <td><%= link_to(job.title, job_path(job)) %></td>
            <td><%= job.description %></td>
            <td><%= job.created_at%></td>
            <td><%= job.wage_lower_bound %> </td>
            <td><%= job.wage_upper_bound %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

  </div>
